<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<!-- ✅ TAMBAHKAN STYLE BACKGROUND DI SINI -->

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1447.0" pickOnBounds="true" StackPane.alignment="CENTER">
         <image>
            <Image url="@../Icons/bg_price.jpg" />
         </image>
      </ImageView>
      <AnchorPane>
         <children>
            <VBox alignment="CENTER" spacing="18.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <!-- Header with shadow for better visibility on image -->
                  <Label alignment="CENTER" style="-fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 10, 0.5, 0, 2);" text="Choose Your Plan">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                     <padding>
                        <Insets top="16.0" />
                     </padding>
                  </Label>
      
                  <!-- Cards Container -->
                  <HBox alignment="CENTER" spacing="24.0">
                     <children>
                        <!-- Special Card -->
                        <StackPane fx:id="specialCard" maxWidth="450.0" onMouseClicked="#selectSpecial" prefWidth="450.0" styleClass="pricing-card">
                           <children>
                              <VBox maxHeight="-Infinity" maxWidth="450.0" prefWidth="450.0" spacing="16.0" style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,0.98), rgba(250,250,250,0.95));                                      -fx-background-radius: 18;                                      -fx-border-color: rgba(0,0,0,0.06);                                      -fx-border-width: 2;                                      -fx-border-radius: 18;                                      -fx-padding: 32;">
                                 <effect>
                                    <DropShadow offsetY="2.0" radius="12.0">
                                       <color>
                                          <Color opacity="0.18" />
                                       </color>
                                    </DropShadow>
                                 </effect>
                                 <children>
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #111;" text="Special">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #2f7d32;" text="650k/month">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                    <VBox spacing="10.0" style="-fx-opacity: 0.9;">
                                       <children>
                                          <Label text="• Member bulanan">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                          <Label text="• Personal Trainer">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                          <Label text="• Semua Fasilitas">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <VBox.margin>
                                          <Insets top="8.0" />
                                       </VBox.margin>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
      
                        <!-- Monthly Card (Popular) -->
                        <StackPane fx:id="monthlyCard" maxWidth="450.0" onMouseClicked="#selectMonthly" prefWidth="450.0" styleClass="pricing-card popular-card">
                           <children>
                              <VBox maxHeight="-Infinity" maxWidth="450.0" prefWidth="450.0" spacing="16.0" style="-fx-background-color: linear-gradient(to bottom, #fffbe6, #fff7cc);                                      -fx-background-radius: 18;                                      -fx-border-color: rgba(247,181,0,0.35);                                      -fx-border-width: 2;                                      -fx-border-radius: 18;                                      -fx-padding: 32;">
                                 <effect>
                                    <DropShadow offsetY="2.0" radius="12.0">
                                       <color>
                                          <Color opacity="0.18" />
                                       </color>
                                    </DropShadow>
                                 </effect>
                                 <children>
                                    <Label style="-fx-background-color: #f7b500; -fx-text-fill: white; -fx-padding: 6 14 6 14; -fx-background-radius: 12; -fx-font-size: 13;" text="POPULAR" />
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #111;" text="Monthly">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #c27803;" text="150k/month">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                    <VBox spacing="10.0" style="-fx-opacity: 0.95;">
                                       <children>
                                          <Label text="• Akses Unlimited">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                          <Label text="• Semua Fasilitas">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                          <Label text="• Program Diet">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <VBox.margin>
                                          <Insets top="8.0" />
                                       </VBox.margin>
                                    </VBox>
                                 </children>
                                 <styleClass>
                                    <String fx:value="pricing-card" />
                                    <String fx:value="popular-card" />
                                 </styleClass>
                              </VBox>
                           </children>
                        </StackPane>
      
                        <!-- Daily Card -->
                        <StackPane fx:id="dailyCard" maxWidth="450.0" onMouseClicked="#selectDaily" prefWidth="450.0" styleClass="pricing-card">
                           <children>
                              <VBox maxHeight="-Infinity" maxWidth="450.0" prefWidth="450.0" spacing="16.0" style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,0.98), rgba(250,250,250,0.95));                                      -fx-background-radius: 18;                                      -fx-border-color: rgba(0,0,0,0.06);                                      -fx-border-width: 2;                                      -fx-border-radius: 18;                                      -fx-padding: 32;">
                                 <effect>
                                    <DropShadow offsetY="2.0" radius="12.0">
                                       <color>
                                          <Color opacity="0.18" />
                                       </color>
                                    </DropShadow>
                                 </effect>
                                 <children>
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #111;" text="Daily">
                                       <font>
                                          <Font size="32.0" />
                                       </font>
                                    </Label>
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #275d38;" text="10k/day">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                    <VBox spacing="10.0" style="-fx-opacity: 0.9;">
                                       <children>
                                          <Label text="• Akses 1 Hari">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                          <Label text="• Semua Fasilitas">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                          <Label text="• Program Diet">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <VBox.margin>
                                          <Insets top="8.0" />
                                       </VBox.margin>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
                     </children>
                     <padding>
                        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
